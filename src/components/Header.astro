---
import HeaderNavPC from "./HeaderNavPC.astro";
import HeaderNavMobile from "./HeaderNavMobile.astro";

interface Props {
    link: {
		nosotros: string,
		servicios: string,
		galeria: string,
		contacto: string
	}
}

const { link  } = Astro.props


---

<header id="header-nav" class="fixed top-0 w-full px-6 py-4 z-50 bg-white border-blue-200 border-b ">
    <HeaderNavPC nosotros={link.nosotros} servicios={link.servicios} galeria={link.galeria} contacto={link.contacto}/>
    <HeaderNavMobile nosotros={link.nosotros} servicios={link.servicios} galeria={link.galeria} contacto={link.contacto}/>
</header>